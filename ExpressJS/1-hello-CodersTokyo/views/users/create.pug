extends ../layouts/common.pug
block content
    h1 Create User 
    if errors
        each error in errors
            .alert.alert-danger= error
    form(method="POST", action="/users/create", style='width:500px', enctype="multipart/form-data")
        .form-group
            label(for="name") Name
            input#name.form-control(type="text", name="name", value= values ? values.name : "")
        .form-group
            label(for="phone") Phone
            input#phone.form-control(type="text", name="phone", value= values ? values.phone : "")
        .form-group
            label(for="phone") Avatar
            input#avatar.form-control(type="file", name="avatar")

        button.btn.btn-primary.mt-3 Create